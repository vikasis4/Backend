<html>

<head>
	<style>
		.heading h1 {
			text-align: center;
			font-family: Georgia, 'Times New Roman', Times, serif;
			font-size: 4rem
		}

		.heading {
			width: 80%;
			padding: 0rem 0 0 0;
			margin: 4rem auto;
			border-radius: 0.4rem;
			border-bottom: 8px solid black;
		}

		.one h1,
		.two h1,
		.three h1 {
			text-align: left;
			font-family: Georgia, 'Times New Roman', Times, serif;
			font-size: 3.6rem
		}

		.one h2,
		.two h2,
		.three h2 {
			text-align: left;
			font-family: Georgia, 'Times New Roman', Times, serif;
			font-size: 1.8rem;
			font-weight: 400;
		}

		.one,
		.two,
		.three {
			width: 90%;
			padding: 0rem 0 0 0;
			margin: 8rem 0 8rem 4rem
		}

		.btn {
			background-color: black;
			border-radius: 1rem;
			text-align: center;
			border: none;
			color: white;
			padding: 2rem 0 2rem 0;
			width: 90%;
			margin: 2rem auto;
			font-family: Georgia, 'Times New Roman', Times, serif;
			font-size: 2.6rem;
			display: block;
		}
	</style>
</head>

<body>
	<div class="heading">
		<h1>RankBoost Checkout</h1>
	</div>
	<div class="one">
		<h1>Items :-</h1>
		<% if (names) { %>
			<h2 id="item_h0"></h2>
			<h2 id="item_h1"></h2>
			<h2 id="item_h2"></h2>
			<h2 id="item_h3"></h2>
			<h2 id="item_h4"></h2>
			<h2 id="item_h5"></h2>
			<h2 id="item_h6"></h2>
			<h2 id="item_h7"></h2>
			<h2 id="item_h8"></h2>
			<script>
				var namess = ('<%= names%>').split(',');
				var price = ('<%= price%>').split(',');
				for (let i = 0; i < namess.length; i++) {
					document.getElementById('item_h' + i).textContent = namess[i] + ' ------------ Rs ' + price[i] + '\n\n'
				}
			</script>
			<% } %>
	</div>
	<div class="two">
		<h1>Order ID :-</h1>
		<h2>
			<%= uid%>
		</h2>
	</div>
	<div class="three">
		<h1>Total Amount :-</h1>
		<h2 style="color:green">Rs <%= money%>
		</h2>
	</div>

	<form method="POST" name="customerData" action="/ccavRequestHandler">
		<table width="40%" height="100" style="border:none; width: 90%; outline:none" align="center">
			<tr style="display: none;">
				<td>Parameter Name:</td>
				<td>Parameter Value:</td>
			</tr>
			<tr style="display: none;">
				<td colspan="2">Compulsory information</td>
			</tr>
			<tr style="display: none;">
				<td>Merchant Id</td>
				<td><input type="text" name="merchant_id" id="merchant_id" value="2484275" /> </td>
			</tr>
			<tr style="display: none;">
				<td>Order Id</td>
				<td><input type="text" name="order_id" value=<%=uid%> /></td>
			</tr>
			<tr style="display: none;">
				<td>Currency</td>
				<td><input type="text" name="currency" value="INR" /></td>
			</tr>
			<tr style="display: none;">
				<td>Amount</td>
				<td><input type="text" name="amount" value=<%=money%> /></td>
			</tr>
			<tr style="display: none;">
				<td>Redirect URL</td>
				<td><input type="text" name="redirect_url" value="https://pay.rankboost.live/ccavResponseHandler" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Cancel URL</td>
				<td><input type="text" name="cancel_url" value="https://pay.rankboost.live/ccavResponseHandler" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Language</td>
				<td><input type="text" name="language" id="language" value="EN" /></td>
			</tr>

			<tr style="display: none;">
				<td colspan="2">Billing information(optional):</td>
			</tr>
			<tr style="display: none;">
				<td>Billing Name</td>
				<td><input type="text" name="billing_name" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Billing Address:</td>
				<td><input type="text" name="billing_address" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Billing City:</td>
				<td><input type="text" name="billing_city" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Billing State:</td>
				<td><input type="text" name="billing_state" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Billing Zip:</td>
				<td><input type="text" name="billing_zip" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Billing Country:</td>
				<td><input type="text" name="billing_country" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Billing Tel:</td>
				<td><input type="text" name="billing_tel" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Billing Email:</td>
				<td><input type="text" name="billing_email" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td colspan="2">Shipping information(optional):</td>
			</tr>
			<tr style="display: none;">
				<td>Shipping Name</td>
				<td><input type="text" name="delivery_name" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Shipping Address:</td>
				<td><input type="text" name="delivery_address" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Shipping City:</td>
				<td><input type="text" name="delivery_city" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Shipping State:</td>
				<td><input type="text" name="delivery_state" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Shipping Zip:</td>
				<td><input type="text" name="delivery_zip" value="Nill" /></td>
			</tr>
			<tr style="display: none;">
				<td>Shipping Country:</td>
				<td><input type="text" name="delivery_country" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Shipping Tel:</td>
				<td><input type="text" name="delivery_tel" value="Nill" />
				</td>
			</tr>
			<tr style="display: none;">
				<td>Merchant Param1</td>
				<td><input type="text" name="merchant_param1" value=<%=id%> /></td>
			</tr>
			<tr style="display: none;">
				<td>Merchant Param2</td>
				<td><input type="text" name="merchant_param2" value=<%=string%> /></td>
			</tr>
			<tr style="display: none;">
				<td>Merchant Param3</td>
				<td><input type="text" name="merchant_param3" value="" /></td>
			</tr>
			<tr style="display: none;">
				<td>Merchant Param4</td>
				<td><input type="text" name="merchant_param4" value="additional Info." /></td>
			</tr>
			<tr style="display: none;">
				<td>Merchant Param5</td>
				<td><input type="text" name="merchant_param5" value="additional Info." /></td>
			</tr>
			<tr style="display: none;">
				<td>Promo Code:</td>
				<td><input type="text" name="promo_code" value="" /></td>
			</tr>
			<tr style="display: none;">
				<td>Customer Id:</td>
				<td><input type="text" name="customer_identifier" value="ghs" /></td>
			</tr>
			<tr style="width: 100%;">
				<td style="width: 100%; border-radius: 1rem; background-color:#3E75E1"><INPUT
						style="background-color: #3E75E1; border-radius: 2rem;	border: none; color:white; width: 100%;font-family:Georgia, 'Times New Roman', Times, serif; height: 100%; font-size:3rem"
						TYPE="submit" value="Pay"></td>
			</tr>
		</table>
	</form>
	<button id="btns" class="btn">
		Cancel</button>
	<script>
		var clc = document.getElementById('btns');
		clc.addEventListener('click', function (e) {
			alert('clicked');
		})

	</script>
</body>

</html>